<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"

    tools:context="ng.com.calabaryellowpages.FacebookActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Unable to authenticate please continue by using another login option"
        android:id="@+id/errorMsg"
        android:layout_above="@+id/login_button"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="Log in with gmail"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginBottom="17dp"
        android:id="@+id/gmail"
        android:layout_above="@+id/login_button"
        android:layout_alignRight="@+id/login_button"
        android:layout_alignEnd="@+id/login_button"
        android:layout_alignLeft="@+id/login_button"
        android:layout_alignStart="@+id/login_button"
        android:background="@android:color/holo_red_dark"
        android:textColor="@color/backgroundColor" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:id="@+id/progressGmail"
        android:visibility="gone"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/gmail"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/login_button"
        android:layout_alignEnd="@+id/login_button" />

    <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_marginLeft="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="97dp" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        android:id="@+id/splash"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash"
        android:layout_centerHorizontal="true"
        android:id="@+id/splash_text"/>


</RelativeLayout>

