<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="Smile Mmumene"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"


        />
    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:id="@+id/view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/house"
                />

            <ImageView
                android:id="@+id/work_days"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/work"
                android:layout_below="@+id/home_icon"
                />

            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/phone"
                android:layout_below="@+id/work_days"
                />
            <ImageView
                android:id="@+id/unit_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/special"
                android:layout_below="@+id/phone_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/address"
                android:gravity="center_vertical|right"
                android:text="calabar"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/home_icon"
                android:layout_toEndOf="@+id/home_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/workingDays"
                android:gravity="center_vertical|right"
                android:text="Mon - Sat 8-5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignBottom="@+id/work_days"
                android:layout_toRightOf="@+id/work_days"
                android:layout_toEndOf="@+id/work_days" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical|right"
                android:text="07033383068"
                android:id="@+id/contact"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignBottom="@+id/phone_icon"
                android:layout_toRightOf="@+id/phone_icon"
                android:layout_toEndOf="@+id/phone_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/specialisation"
                android:gravity="center_vertical|right"
                android:text="Tiling"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignBottom="@+id/unit_icon"
                android:layout_toRightOf="@+id/unit_icon"
                android:layout_toEndOf="@+id/unit_icon" />




        </RelativeLayout>

    </android.support.v7.widget.CardView>





</RelativeLayout>
</ScrollView>