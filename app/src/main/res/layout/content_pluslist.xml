<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp">

    <android.support.v7.widget.CardView
        android:id="@+id/content_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:id="@+id/ratingBar2"
                android:max="5"
                android:numStars="5"
                android:isIndicator="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/summary"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_below="@+id/ratingBar2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/native_ad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainCard"
        android:orientation="vertical"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:layout_alignEnd="@+id/details"
        android:layout_alignRight="@+id/details"
        android:layout_alignLeft="@+id/details"
        android:layout_alignStart="@+id/details"
        android:layout_below="@+id/recycler"
        android:id="@+id/mainCard">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textAppearance="?android:textAppearanceMedium"
                android:elegantTextHeight="true"
                android:text="@string/no_description"
                android:layout_centerHorizontal="true"
                android:id="@+id/description"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/recycler"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details"
        android:layout_below="@+id/native_ad_container"
        android:layout_margin="12dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:id="@+id/addressRel"
                android:layout_below="@+id/title">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/address"
                    android:gravity="center_vertical|start"
                    android:text="calabarjjjjjj njnjnkjgy gyujyvjy ftftyuft ftfytdt dtyddr
                fttftytygg"
                    android:paddingRight="6dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_toRightOf="@+id/home_icon"
                    android:layout_toEndOf="@+id/home_icon" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_below="@+id/addressRel"
                android:id="@+id/workRel">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/workingDays"
                    android:gravity="center_vertical|start"
                    android:text="Mon - Sat 8-5"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_toRightOf="@+id/work_days"
                    android:layout_toEndOf="@+id/work_days" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workRel"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/phoneRel">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:text="07033383068"
                    android:id="@+id/contact"
                    android:paddingRight="6dp"
                    android:linksClickable="true"
                    android:autoLink="phone"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_toRightOf="@+id/phone_icon"
                    android:layout_toEndOf="@+id/phone_icon" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/specialRel"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:layout_below="@+id/phoneRel"
                android:layout_marginBottom="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/specialisation"
                    android:gravity="center_vertical|start"
                    android:text="Tiling"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_toRightOf="@+id/unit_icon"
                    android:layout_toEndOf="@+id/unit_icon" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/specialRel">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/website"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical|start"
                    android:text="http://past3.com.ng"
                    android:textAlignment="viewStart"
                    android:linksClickable="true"
                    android:autoLink="web"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
            </RelativeLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>