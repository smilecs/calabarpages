<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ng.com.calabaryellowpages.pluslist"
    tools:showIn="@layout/activity_pluslist">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainCard">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textStyle="bold"
                    android:id="@+id/descrip"
                    android:layout_margin="@dimen/text_margin"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:elegantTextHeight="true"
                    android:id="@+id/description"
                    android:layout_below="@+id/descrip"
                   />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/details"
            android:id="@+id/gallery">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/gal"
                    android:layout_marginBottom="16dp"
                    android:id="@+id/recycler"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            android:id="@+id/details"
            android:layout_below="@+id/mainCard"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="16dp">
                    <ImageView
                        android:id="@+id/home_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/house"
                        />

                    <ImageView
                        android:id="@+id/work_days"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/work"
                        android:layout_below="@+id/address"
                        />

                    <ImageView
                        android:id="@+id/phone_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/phone"
                        android:layout_below="@+id/workingDays"
                        />
                    <ImageView
                        android:id="@+id/unit_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/special"
                        android:layout_marginBottom="8dp"
                        android:layout_below="@+id/contact"
                        />
                    <ImageView
                        android:id="@+id/web"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/web"
                        android:layout_marginBottom="8dp"
                        android:layout_below="@+id/specialisation"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/address"
                        android:gravity="center_vertical|start"
                        android:text="calabarjjjjjj njnjnkjgy gyujyvjy ftftyuft ftfytdt dtyddr
                fttftytygg"
                        android:textAlignment="viewStart"
                        android:paddingBottom="8dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_toRightOf="@+id/home_icon"
                        android:layout_toEndOf="@+id/home_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/workingDays"
                        android:gravity="center_vertical|start"
                        android:text="Mon - Sat 8-5"
                        android:paddingBottom="8dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_alignBottom="@+id/work_days"
                        android:layout_toRightOf="@+id/work_days"
                        android:layout_toEndOf="@+id/work_days" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|start"
                        android:text="07033383068"
                        android:id="@+id/contact"
                        android:paddingBottom="8dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_alignBottom="@+id/phone_icon"
                        android:layout_toRightOf="@+id/phone_icon"
                        android:layout_toEndOf="@+id/phone_icon" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/specialisation"
                        android:gravity="center_vertical|start"
                        android:text="Tiling"
                        android:textAlignment="viewStart"
                        android:paddingBottom="8dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_alignBottom="@+id/unit_icon"
                        android:layout_toRightOf="@+id/unit_icon"
                        android:layout_toEndOf="@+id/unit_icon" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/website"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical|start"
                        android:text="http://past3.com.ng"
                        android:textAlignment="viewStart"
                        android:linksClickable="true"
                        android:paddingBottom="8dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_alignBottom="@+id/web"
                        android:layout_toRightOf="@+id/web"
                        android:layout_toEndOf="@+id/web" />

                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
